{
  "name": "@sevenryze/ruid",
  "version": "1.5.0",
  "private": false,
  "description": "The optimised primary kep generator for Database, based on UUID and cluster safe.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sevenryze/ruid"
  },
  "license": "MIT",
  "main": "index.js",
  "files": [
    "dist/",
    "typings/",
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p .",
    "watch": "tsc -w --incremental -p .",
    "test": "jest --bail --runInBand",
    "test:coverage": "jest -w=7 --ci --bail --coverage",
    "test:only-unit": "jest --bail --testNamePattern=\"Unit:\"",
    "test:only-integration": "jest --bail --testNamePattern=\"Integration:\"",
    "test:only-e2e": "jest --bail --testNamePattern=\"E2E:\"",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint --fix \"{lib,test}/**/*.ts\" --quiet",
    "prerelease": "npm run build && npm test",
    "release": "release-it"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "towerflow": {
    "type": "node-lib"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-angular": "^9.1.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^8.0.3",
    "jest": "^26.2.2",
    "lint-staged": "^13.2.1",
    "prettier": "^2.0.5",
    "release-it": "^15.10.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/node": "^14.0.27",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.1.0",
    "uuid": "^8.3.0",
    "validator": "^13.1.1"
  }
}
